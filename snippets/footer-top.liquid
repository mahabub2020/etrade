{% if settings.footer_top_enable %}
  <!-- Start Footer Top Area -->
  <div class="footer-top separator-top">
    <div class="container">
      <div class="row">
        <!-- Start Single Widget -->
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'contact_about' %}
              <div
                class="col-lg-{{ block.settings.footer_about_coloum }} col-md-{{ block.settings.footer_about_coloum_mobile }}"
                id="block-{{ block.id }}"
              >
                <div class="axil-footer-widget">
                  {% if block.settings.footer_about_title != '' %}
                    <h3 class="widget-title">{{ block.settings.footer_about_title }}</h3>
                  {% endif %}
                  <div class="inner">
                    {% if block.settings.footer_about_title != '' %}
                      <p>{{ block.settings.address_descrption }}</p>
                    {% endif %}
                    <ul class="support-list-item">
                      {% if block.settings.about_email != '' %}
                        <li>
                          <a href="mailto:{{ block.settings.about_email }}"
                            ><i class="fal fa-envelope-open"></i>{{ block.settings.about_email -}}
                          </a>
                        </li>
                      {% endif %}
                      {% if block.settings.about_phone != '' %}
                        <li>
                          <a href="tel:{{ block.settings.about_phone }}"
                            ><i class="fal fa-phone-alt"></i>{{ block.settings.about_phone -}}
                          </a>
                        </li>
                      {% endif %}
                    </ul>
                  </div>
                </div>
              </div>
              <!-- End Single Widget -->
            {% when 'footer_menu' %}
              <!-- Start Single Widget -->

              <div class="col-lg-{{ block.settings.footer_menu_coloum }} col-sm-6" id="block-{{ block.id }}">
                <div class="footer-widget">
                  {% if block.settings.footer_menu_title != '' %}
                    <h5 class="widget-title">{{ block.settings.footer_menu_title }}</h5>
                  {% endif %}
                    <div class="inner">
                      <ul class="widget-menu">
                        {% assign footer_menu = block.settings.footer_menu_handle %}
                        {% for link in linklists[footer_menu].links %}
                          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                        {% endfor %}
                      </ul>
                  </div>
                </div>
              </div> 
            {% when 'download_app' %}
              <!-- Start Single Widget -->
              <div class="col-lg-{{ block.settings.footer_app_coloum }} col-sm-{{ block.settings.footer_app_coloum }}">
                <div class="axil-footer-widget">
                  {% if block.settings.app_title != '' %}
                    <h3 class="widget-title">{{ block.settings.app_title }}</h3>
                  {% endif %}
                  <div class="inner">
                    {% if block.settings.app_descrption != '' %}
                      <span>{{ block.settings.app_descrption }}</span>
                    {% endif %}
                    <div class="download-btn-group">
                      {%- if block.settings.qr_code_img -%}
                        <div class="qr-code">
                          <img
                            src="{{ block.settings.qr_code_img | img_url: '98x98' }}"
                            alt="{{ block.settings.qr_code_img.alt | default: shop.name }}"
                          >
                        </div>
                      {%- endif -%}

                      <div class="app-link">
                        {%- if block.settings.app_store1 -%}
                          <a href="{{ block.settings.app_descrption }}">
                            <img loading="eager" src="{{ block.settings.app_store1 | img_url: '140x42' }}" alt="{{ block.settings.app_store1.alt | default: shop.name }}">
                          </a>
                        {%- endif -%}
                        {%- if block.settings.app_store2 -%}
                          <a href="{{ block.settings.app_descrption }}">
                            <img src="{{ block.settings.app_store2 | img_url: '140x42' }}" alt="{{ block.settings.app_store2.alt | default: shop.name }}">
                          </a>
                        {%- endif -%}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- End Single Widget -->
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
  <!-- End Footer Top Area -->
{% endif %}
