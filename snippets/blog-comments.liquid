
<div class="comment">
  <h4 class="comment-title title mb--40">
    {{ article.title | escape }}
   </h4>
  <ul class="comment-list comment-list">
 {% for comment in article.comments %}
    <li class="comment">
      <div class="single-comment">
      <div class="comment-author comment-img single-comment">
        <div class="comment-author-image comment-img">
           {% if section.settings.commentator_image %}
        <img src="{{ section.settings.commentator_image | img_url: '80x80', crop: 'center' }}" alt="{{ section.settings.commentator_image.alt }}">
        {% else %}
        <img src="https://www.gravatar.com/avatar/{{ comment.email | remove: ' ' | strip_newlines | downcase | md5 }}" />
        {% endif %}
        </div>
        <div class="axil-comment-content comment-inner">
          <div class="axil-comment-content-top">
            <h5 class="comment-author">{{ comment.author }}</h5>
            <span class="comment-date">{{ comment.created_at | date: "%b %d, %Y at %H:%M" }}</span>
          </div>
          <div class="comment-text mt--20">
            {{ comment.content }}
          </div>
        </div>
        </div>
      </div>
    </li>
{% endfor %}
  </ul>
</div>