
{% form 'new_comment', article %}

{{ form.errors | default_errors }}



<div class="comment-respond">
  <h3 class="comment-reply-title">{{ 'blogs.comments.title' | t }}</h3>
  {% if section.settings.comment_description != '' %}
  <div class="form-notes mb--20">
    <p class="comment-notes">{{ section.settings.comment_description }}</p>
  </div>
  {% endif %}

  <div class="row row--25">
    
      <div class="col-lg-6 col-md-6 col-12">
        <div class="form-group">
          {% if section.settings.text_name_title != '' %}
          <label class="author" for="author">{{ section.settings.text_name_title }}</label>
          {% endif %}
          <input type="text"  name="comment[author]" id="commentAuthor" value="{{ form.author }}" class="form__input {% if form.errors contains 'author' %}error{% endif %}" placeholder="{{ 'blogs.comments.name' | t }}">
        </div>  
      </div>  
      <div class="col-lg-6 col-md-6 col-12">
        <div class="form-group">
          {% if section.settings.text_email_title != '' %}
          <label class="form__label form__label--3" for="comment_email">{{ section.settings.text_email_title }}</label>
          {% endif %}
          <input type="email" name="comment[email]" id="commentEmail" value="{{ form.email }}" class="form__input {% if form.errors contains 'email' %}error{% endif %}" placeholder="{{ 'blogs.comments.email' | t }}">
          </div> 
      </div> 
   
  </div>

 
    <div class="row">
      <div class="col-12">
        <div class="form-group">
        {% if section.settings.text_area_title != '' %}
        <label class="" for="review">{{ section.settings.text_area_title }}</label>
        {% endif %} 
        <textarea name="comment[body]" id="commentBody"  placeholder="{{ 'blogs.comments.message' | t }}" class="form__input form__input--textarea">{{ form.body }}</textarea>

      </div>
      </div>
    </div>
  

  {% if blog.moderated? %}
  <p class="comment-form-cookies-consent">{{ 'blogs.comments.moderated' | t }}</p>
  {% endif %}

  <div class="form-submit">  
        <input type="submit" value="Post Comment" class="axil-button btn-large btn-transparent">
  </div>

</div>

{% endform %}