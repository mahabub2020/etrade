{% if pagination.pages > 1 %}
  {% if settings.loading_style == "load_more" %}
    <input
      type="hidden"
      value="{{ paginate.next.url }}"
      data-next-url>
    <input
      type="hidden"
      value="{{ paginate.pages }}"
      data-total-pages>
    <input
      type="hidden"
      value="{{ paginate.current_page  }}"
      data-current-page>
    <div class="load-more_wrap">
      <button class="btn js-load-more">
        <span load-more-text>Load more</span>
        <span class="hide" loader></span>
      </button>
    </div>
  {% elsif settings.loading_style == "pagination" %}
    <nav role="navigation" class="flex justify-center items-center my-8">
      {% if pagination.previous %}
        <a href="{{ pagination.previous.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">Previous</a>
      {% endif %}

      {% if pagination.next %}
        <a href="{{ pagination.next.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">Next</a>
      {% endif %}
    </nav>
  {% else %}
    {% render 'products-with-infinite' %}
  {% endif %}
{% endif %}