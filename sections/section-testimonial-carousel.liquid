{%- capture data_slick_activation -%}
      data-slick='{
          {%- if section.settings.autoplay_true -%}
          "autoplay": true,
          "autoplaySpeed": {{ section.settings.autoplay_speed }},
          {%- endif -%} 
          "slidesToScroll": 1,
          "slidesToShow": 1, 
          "arrows": true,
          {% if settings.rtl_enable %} "rtl": true,{% endif %} 
          "infinite": true,
          "dots": false,   
          "nextArrow": "<button class=\"slide-arrow prev-arrow\"><i class=\"fal fa-long-arrow-left\"></i></button>", 
          "prevArrow": "<button class=\"slide-arrow next-arrow\"><i class=\"fal fa-long-arrow-right\"></i></button>",
          "responsive":[
            {"breakpoint":991, "settings": {"slidesToShow": 1 } }
             
          ]       
      }'
   {%- endcapture -%}

<div id="section-{{ section.id }}" class="axil-testimoial-area axil-section-gap bg-vista-white">
    <div class="container">
        <div class="section-title-wrapper"> 
            {% if section.settings.section_sub_title != '' %}  
              <span class="title-highlighter highlighter-secondary"> {{ section.settings.sub_title_icon }}  {{ section.settings.section_sub_title | escape }}</span>
            {% endif %} 
            {% if section.settings.section_title != '' %}  
              <div class="heading-title">
                <h2 class="title">{{ section.settings.section_title | escape }}</h2>
              </div>  
            {% endif %}  
        </div>
        <!-- End .section-title -->
        <div class="testimonial-slick-activation axil-slick-slider  testimonial-style-one-wrapper slick-layout-wrapper--20 axil-slick-arrow arrow-top-slide" {% if settings.rtl_enable %} dir="rtl"{% endif %} {{ data_slick_activation }} >
            
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'review' %}   

              <div class="slick-single-layout testimonial-style-one"> 
                {% if block.settings.review_content != '' %}   
                <div class="review-speech">
                        <p>“{{ block.settings.review_content | escape }}“</p>
                    </div>
                  {% endif %}  
                    <div class="media">
                        <div class="thumbnail">
                          <img src="{% if block.settings.tsm_img %}{{ block.settings.tsm_img | img_url: '60x60' }}{% else %}http:\/\/via.placeholder.com\/60x60{% endif %}" alt="{{ block.settings.tsm_img.alt }}"> 
                        </div>
                        <div class="media-body"> 
                          {% if block.settings.author_desg != '' %}   
                            <span class="designation">{{ block.settings.author_desg | escape }}</span>
                          {% endif %}   
                          {% if block.settings.author_name != '' %}   
                            <h6 class="title">{{ block.settings.author_name | escape }}</h6>
                          {% endif %}   
                        </div>
                    </div>
                    <!-- End .thumbnail -->
                </div> 
              
          {% endcase %}
        {% endfor %} 

        </div>
    </div>
</div>
<!-- End Testimonila Area  -->

{% schema %}
{
  "name": "Testimoial Carousel",
  "settings": [
    {
      "type": "header",
      "content": "Section Title"
    },
    {
      "type": "checkbox",
      "id": "is_section_title",
      "label": "Enable Section Title"
    },
    {
      "type": "html",
      "id": "sub_title_icon",
      "default": "<i class='fas fa-tags'></i>",
      "label": "Before Icon"
    },
    {
      "type": "text",
      "id": "section_title",
      "default": "Our Users Feedback",
      "label": "Title"
    }, 
    {
      "type": "text",
      "id": "section_sub_title",
      "default": "Testimonials",
      "label": "Sub Title"
    },
    {
      "type": "header",
      "content": "Options"
    },
      {
        "type": "checkbox",
        "id": "autoplay_true",
        "label": "Autoplay Enable",
        "default": false
      },
      {
        "type": "range",
        "id": "autoplay_speed",
        "min": 1000,
        "max": 9000,
        "step": 1000,
        "label": "Autoplay Speed",
        "unit": "ms",
        "default": 5000
      }

  ],

  "blocks": [
    {
      "type": "review",
      "name": "Review Content",
      "settings": [
        {
          "type": "textarea",
          "id": "review_content",
          "default": "It's amazing how much easier it has been to meet new people and create instantly non connections. I have the exact same personal the only thing that has changed is my mind set and a few behaviors.",
          "label": "Content"
        },
        {
          "type": "image_picker",
          "id": "tsm_img",
          "label": "Testimoial Image",
          "info": "Recommended Size: 60 x 60px"
        }, 
        {
          "type": "text",
          "id": "author_name",
          "default": "Wade Warren",
          "label": "Author Name"
        },
        {
          "type": "text",
          "id": "author_desg",
          "default": "Head of Marketing",
          "label": "Author Desg"
        } 
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimoial Carousel",
      "blocks": [
        {
          "type": "review"
        }
      ]
    }
  ]
}
{% endschema %}