
{%- for block in section.blocks -%}
    {%- case block.type -%}
        {%- when 'pagetitle' -%} 
            <div class="axil-breadcrumb-area">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-8">
                            <div class="inner"> 

                            {% unless template == 'index' %}
                                <nav class="" role="navigation" aria-label="breadcrumbs">
                                  <ul class="breadcrumb-list axil-breadcrumb liststyle d-flex">
                                
                                    <li class="item-home">
                                      <a href="/" title="{{ 'general.breadcrumbs.home_link_title' | t }}">{{ 'general.breadcrumbs.home' | t }}</a>
                                    </li>
                                    <li>
                                      {% if template contains 'product' %}
                                
                                      {% if collection %}
                                      {% if collection.handle %}
                                      {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
                                      {{ collection.title | link_to: url }}
                                      {% endif %}
                                      {% endif %}
                                
                                      <span>{{ product.title }}</span>
                                
                                      {% elsif template contains 'collection' and collection.handle %}
                                
                                
                                      {% if current_tags %}
                                      {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
                                      {{ collection.title | link_to: url }}
                                
                                      <span>{{ current_tags | join: " + " }}</span>
                                      {% else %}
                                      <span>{{ collection.title }}</span>
                                      {% endif %}
                                
                                      {% elsif template == 'blog' %}
                                
                                
                                      {% if current_tags %}
                                      {{ blog.title | link_to: blog.url }}
                                
                                      <span>{{ current_tags | join: " + " }}</span>
                                      {% else %}
                                      <span>{{ blog.title }}</span>
                                      {% endif %}
                                
                                      {% elsif template == 'article' %}
                                
                                
                                      {{ blog.title | link_to: blog.url }}
                                
                                      <span>{{ article.title }}</span>
                                
                                      {% elsif template contains 'page' %}
                                
                                
                                      <span>{{ page.title }}</span>
                                
                                      {% else %}
                                
                                
                                      <span>{{ page_title }}</span>
                                
                                      {% endif %}
                                    </li>
                                  </ul>
                                </nav>
                                {% endunless %} 
                                {% unless template == 'product' or template == 'article' %}
                                    <h1 class="title page-title">
                                        {% if block.settings.page_title_txt != '' %}
                                            {{ page_title | split: '|' | first }}
                                        {% else %}
                                            {{ block.settings.page_title_txt }}
                                        {% endif %}
                                    </h1>
                                  {% endunless %} 
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-4">
                            <div class="inner">
                                    <div class="bradcrumb-thumb"> 
                                    <img src="{{ block.settings.banner_img | img_url: '126x120' }}"
                                        alt="{{ block.settings.banner_img.alt | default: shop.name }}">
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
    
    {%- endcase -%}
{% endfor %}
 
<div class="main-wrapper">
    <div class="site-content-wrapper"> 
        <!-- Start Blog Area  -->
        <div class="axil-blog-area axil-section-gapTop  axil-section-gapBottom">
            <div class="container">
                <div class="row row--20">
                    <div class="col-lg-8 axil-post-wrapper">
                        {%- paginate blog.articles by section.settings.blog_list -%}
                        {%- for article in blog.articles -%}
