
{%- for block in section.blocks -%}
    {%- case block.type -%}
        {%- when 'pagetitle' -%} 
            <div class="axil-breadcrumb-area">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-8">
                            <div class="inner"> 

                            {% unless template == 'index' %}
                                <nav class="" role="navigation" aria-label="breadcrumbs">
                                  <ul class="breadcrumb-list">
                                
                                    <li>
                                      <a href="/" title="{{ 'general.breadcrumbs.home_link_title' | t }}">{{ 'general.breadcrumbs.home' | t }}</a>
                                    </li>
                                    <li>
                                      {% if template contains 'product' %}
                                
                                      {% if collection %}
                                      {% if collection.handle %}
                                      {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
                                      {{ collection.title | link_to: url }}
                                      {% endif %}
                                      {% endif %}
                                
                                      <span>{{ product.title }}</span>
                                
                                      {% elsif template contains 'collection' and collection.handle %}
                                
                                
                                      {% if current_tags %}
                                      {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
                                      {{ collection.title | link_to: url }}
                                
                                      <span>{{ current_tags | join: " + " }}</span>
                                      {% else %}
                                      <span>{{ collection.title }}</span>
                                      {% endif %}
                                
                                      {% elsif template == 'blog' %}
                                
                                
                                      {% if current_tags %}
                                      {{ blog.title | link_to: blog.url }}
                                
                                      <span>{{ current_tags | join: " + " }}</span>
                                      {% else %}
                                      <span>{{ blog.title }}</span>
                                      {% endif %}
                                
                                      {% elsif template == 'article' %}
                                
                                
                                      {{ blog.title | link_to: blog.url }}
                                
                                      <span>{{ article.title }}</span>
                                
                                      {% elsif template contains 'page' %}
                                
                                
                                      <span>{{ page.title }}</span>
                                
                                      {% else %}
                                
                                
                                      <span>{{ page_title }}</span>
                                
                                      {% endif %}
                                    </li>
                                  </ul>
                                </nav>
                                {% endunless %}

                                
                            <ul id="breadcrumbs" class="axil-breadcrumb liststyle d-flex">
                                <li class="item-home"><a class="bread-link bread-home" href="http://etrade.local" title="Home">Home</a></li>
                                <li class="separator separator-home"></li>
                                <li class="item-current item-archive"><span class="bread-current bread-archive">  Shop</span></li>
                            </ul>
                                <h3 class="title">{{ block.settings.page_title_txt }}</h3>
                                    
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-4">
                            <div class="inner">
                                    <div class="bradcrumb-thumb"> 
                                    <img src="{{ block.settings.banner_img | img_url: '126x120' }}"
                                        alt="{{ block.settings.banner_img.alt | default: shop.name }}">
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
    
    {%- endcase -%}
{% endfor %}
 

{% schema %}
{
    "name": "Blog",
    "settings": [
        {
            "type": "text",
            "id": "blog_read_more",
            "label": "Read more label",
            "default": "Read more"
        },
        {
            "type": "range",
            "id": "number_of_blog_posts",
            "step": 1,
            "min": 1,
            "max": 6,
            "label": "Blog posts per page",
            "default": 3
        }
    ],
    "blocks": [
        {
          "type": "pagetitle",
          "limit": 1,
          "name": "Page Title Section",

          "settings": [
            {
              "type": "text",
              "id": "page_title_txt",
              "label": "Page Title",
              "default": "Blog Posts"
            },
            {
                "type": "image_picker",
                "id": "banner_img",
                "label": "Banner Image"
        
              }
          ]
        }  
      ]
}
{% endschema %}