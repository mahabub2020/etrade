{% schema %}
{
    "name": "Blog",
    "settings": [
        {
            "type": "text",
            "id": "blog_read_more",
            "label": "Read more label",
            "default": "Read more"
        },
        {
            "type": "range",
            "id": "number_of_blog_posts",
            "step": 1,
            "min": 1,
            "max": 6,
            "label": "Blog posts per page",
            "default": 3
        },
        {
            "type": "range",
            "id": "blog_list",
            "label": "Is blog List",
            "min": 1,
            "max": 24,
            "step": 1,
            "default": 6
          },
          {
            "type": "checkbox",
            "id": "show_image",
            "label": "Is Show image",
            "default": true
          }
    ],
    "blocks": [
        {
          "type": "pagetitle",
          "limit": 1,
          "name": "Page Title Section",

          "settings": [
            {
              "type": "text",
              "id": "page_title_txt",
              "label": "Page Title",
              "default": "Blog Posts"
            },
            {
                "type": "image_picker",
                "id": "banner_img",
                "label": "Banner Image"
        
              }
          ]
        }  
      ]
}
{% endschema %}