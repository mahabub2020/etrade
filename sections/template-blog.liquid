								{%- render 'article-card',
										article: article,
										tags: settings.show_tags,
										image_height: section.settings.image_height,
										show_image: section.settings.show_image,
										show_date: settings.show_date,
										excerpt: settings.article_show_excerpt,
										show_author: settings.show_author,
										blog_list: section.settings.blog_list,
										read_more: settings.article_show_button,
										show_excerpt: true
