 <div class="axil-poster-countdown axilcoutdown">
    <div class="container">
        <div class="poster-countdown-wrap bg-lighter">
            <div class="row">
                <div class="col-xl-5 col-lg-6">
                    <div class="poster-countdown-content">
                        <div class="section-title-wrapper">
                          {% if section.settings.cd_sub_title != blank %} 
                            <span class="title-highlighter highlighter-secondary"> <i class="fal fa-headphones-alt"></i>{{ section.settings.cd_sub_title }}</span>
                          {% endif %}
                          {% if section.settings.cd_title != blank %} 
                            <h2 class="title">{{ section.settings.cd_title }}</h2>
                          {% endif %}
                        </div>  

                        <div data-time="{{ section.settings.end_time }}" class="poster-countdown countdown mb--40"></div>
                       
                        {% if section.settings.cd_btn_txt != blank %}
                            <a href="{{ section.settings.cd_btn_url }}" class="axil-btn btn-bg-primary">{{ section.settings.cd_btn_txt }}</a>
                          {% endif %}
                          
                        </div>

                </div>
                <div class="col-xl-7 col-lg-6">
                    <div class="poster-countdown-thumbnail">
                      <img 
                        width="{{ section.settings.cd_img.width }}"
                        height="{{ section.settings.cd_img.height }}" 
                        decoding="async"
                        loading="lazy" 
                        src="{{ section.settings.cd_img | image_url: width: section.settings.cd_img.width, height: section.settings.cd_img.height }}"
                        alt="{{ block.settings.box_img.alt }}"> 
 
                    
                      {% if section.settings.is_animations == true %}
                      
                        <div class="music-singnal">
                            <div class="item-circle circle-1"></div>
                            <div class="item-circle circle-2"></div>
                            <div class="item-circle circle-3"></div>
                            <div class="item-circle circle-4"></div>
                            <div class="item-circle circle-5"></div>
                        </div>
                      {% endif %}

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Poster Countdown Area  -->


{% schema %}
{
  "name": "Section CountDown",
  "settings": [
    {
      "type": "header",
      "content": "CountDown Content"
    },
    {
      "type": "text",
      "id": "cd_title",
      "default": "Enhance Your Music Experience",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "cd_sub_title",
      "default": "Don't Miss!!",
      "label": "Sub Title"
    },
    {
      "type": "text",
      "id": "end_time",
      "label": "End date and time",
      "default": "2024-05-22",
      "info": "Format: yyyy-mm-dd"
    },
    {
      "type": "text",
      "id": "cd_btn_txt",
      "default": "Check it Out!",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "cd_btn_url",
      "label": "URL"
    },
    {
      "type": "image_picker",
      "id": "cd_img",
      "label": "Box Image"
    },
    {
      "type": "checkbox",
      "id": "is_animations",
      "label": "Enable Image Animations"
    }
  ],
  "presets": [
    {
      "name": "Section CountDown"
    }
  ]
}
{% endschema %} 