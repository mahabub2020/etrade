        <!-- Start Slider Area -->
        <div class="axil-main-slider-area main-slider-style-4">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="main-slider-content">
                            {% if section.settings.banner_title != '' %}
                                <h1 class="title">{{ section.settings.banner_title }}</h1>
                            {% endif%}
                            {% if section.settings.banner_btn_url %} 
                                <div class="shop-btn">
                                    <a href="{{ section.settings.banner_btn_url }}" class="axil-btn btn-bg-primary"><i class="far fa-shopping-cart"></i> {{ section.settings.banner_btn_txt }}</a>
                                </div>  
                            {% endif %} 
                        </div>
                    </div>
                    <div class="col-md-6">

                        {%- if section.settings.banner_img -%}   

                        <div class="slide-thumb-area">
                            <div class="main-thumb">
                               <img
                                src="{{ section.settings.banner_img | img_url: '830x550' }}"
                                alt="{{ section.settings.banner_img.alt | default: shop.name }}"
                            >
                            </div>

                          {% for block in section.blocks %}  
                          {% case block.type %}
                          {% when 'banner' %}
                          {%- assign product = all_products[block.settings.popup_product] -%}


                              <div class="banner-product plus-hover-items block-repeater-item-{{ block.id }} {% if block.settings.plus_icon_active %}icon-active{% endif %} axil-pos-{{ block.settings.pos_x_type }} axil-pos-{{ block.settings.pos_y_type }}"> 
                          
                                  <div class="product-details">
                                      <h4 class="title"><a href="single-product-8.html">{{ product.title }}</a></h4>
                                      <div class="price">{{ product.price }}</div>
                                      <div class="product-rating">
                                          <span class="icon">
                                              <i class="fas fa-star"></i>
                                              <i class="fas fa-star"></i>
                                              <i class="fas fa-star"></i>
                                              <i class="fas fa-star"></i>
                                              <i class="fas fa-star"></i>
                                          </span>
                                          <span class="rating-number">6,400</span>
                                      </div>
                                  </div>
                                  <div class="plus-icon">
                                      <i class="far fa-plus"></i>
                                  </div>
                              </div>
                      
                        {% endcase %} 
                      {% endfor %}

                        {%- endif -%}
                            <ul class="shape-group">
                                <li class="shape-1">
                                    <svg width="717" height="569" viewBox="0 0 717 569" fill="none" xmlns="http://www.w3.org/2000/svg">
