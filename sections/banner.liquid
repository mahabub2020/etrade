                                        <defs>
                                            <linearGradient id="paint0_linear_3774_13416" x1="359.308" y1="-263.741" x2="-235.553" y2="631.772" gradientUnits="userSpaceOnUse">
                                                <stop offset="0.258739" stop-color="#FAF1EE" />
                                                <stop offset="1" stop-color="#FEEAE9" />
                                            </linearGradient>
                                        </defs>
                                    </svg>
                                </li>
                                <li class="shape-2">
                                    <svg width="806" height="605" viewBox="0 0 806 605" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <g clip-path="url(#clip0_1478_3882)">
                                            <path d="M786.673 3C806.703 135.413 745.738 384.513 341.63 321.606C-163.504 242.971 -51.9045 685.856 476.273 802" stroke="url(#paint0_linear_1478_3882)" stroke-width="32" stroke-linecap="round" />
                                        </g>
                                        <defs>
                                            <linearGradient id="paint0_linear_1478_3882" x1="-232.181" y1="-67.0641" x2="659.844" y2="1032.81" gradientUnits="userSpaceOnUse">
                                                <stop offset="0.525282" stop-color="#FBE9E3" />
                                                <stop offset="1" stop-color="#FFD3C5" />
                                            </linearGradient>
                                            <clipPath id="clip0_1478_3882">
                                                <rect width="806" height="605" fill="white" />
                                            </clipPath>
                                        </defs>
                                    </svg>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Slider Area -->



        {%- style -%}


        {% for block in section.blocks %}
        {% case block.type %}
          {% when 'banner' %}
    

            .block-repeater-item-{{ block.id }}.banner-product.axil-pos-left{
              left: {{ block.settings.pos_x }}
            }     
            .block-repeater-item-{{ block.id }}.banner-product.axil-pos-right{
              right: {{ block.settings.pos_x }}
            }

            .block-repeater-item-{{ block.id }}.banner-product.axil-pos-top{
              top: {{ block.settings.pos_y }}
            }     
            .block-repeater-item-{{ block.id }}.banner-product.axil-pos-bottom{
              bottom: {{ block.settings.pos_y }}
            }

    
    
          {% endcase %}
        {% endfor %}
  
  
  
  
  {%- endstyle -%}

{% schema %}
{
    "name": "Banner Collection",
    "settings": [
        {
            "type": "header",
            "content": "Header Style"
          },
          {
              "type": "radio",
              "id": "header_style",
              "label": "Header Style",
              "options":[
                {
                    "value":"header_style_1",
                    "label": "Style 1"
                },
                {
                    "value":"header_style_2",
                    "label": "Style 2"
                },
                {
                    "value":"header_style_3",
                    "label": "Style 3"
                }
               
              ],
  
             "default": "header_style_1"
          },
          
        {
            "type": "text",
            "id": "banner_title",
            "default": "Life is More Than Sunglasses and Hit Movies. ",
            "label": "Title"
        },
        {
            "type": "text",
            "id": "banner_btn_txt",
            "label": "Button Text",
            "default": "View All Products"
            
          },
          {
            "type": "url",
            "id": "banner_btn_url",
            "label": "URL"
          },
          {
            "type": "image_picker",
            "id": "banner_img",
            "label": "Banner Image"
          }


    ],

    "blocks": [
      {
        "type": "banner",
        "name": "Product Block",
        "settings": [
          {
          "type": "product",
          "id": "popup_product",
          "label": "Product-Handle"
          },  
          {
            "type": "checkbox",
            "id": "plus_icon_active",
            "label": "Plus Icon Active",
            "default": false
          },
          {
            "type": "select",
            "id": "pos_x_type",
            "label": "Horizontal Position",
            "default": "left",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ]
          },
          {
            "type": "range",
            "id": "pos_x",
            "min": 1,
            "max": 100,
            "step": 1,
            "label": "Spacing",
            "unit": "px",
            "default": 1
          },
          {
            "type": "select",
            "id": "pos_y_type",
            "label": "Horizontal Position",
            "default": "top",
            "options": [
              {
                "value": "top",
                "label": "Top"
              },
              {
                "value": "bottom",
                "label": "Bottom"
              }
            ]
          },
          {
            "type": "range",
            "id": "pos_y",
            "min": 1,
            "max": 100,
            "step": 1,
            "label": "Spacing",
            "unit": "px",
            "default": 1
          }


          
        ]
      }
    ],

        "presets": [
          {
            "category": "banner",
            "name": "Product Hero"
        }]
}
{% endschema %}
 