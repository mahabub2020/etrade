
<div class="axil-signin-area"> 
    <!-- Start Header -->
    <div class="signin-header">
        <div class="row align-items-center">
            <div class="col-sm-4">
                {% render 'header-logo' %}
            </div>
            <div class="col-sm-8">
                <div class="singin-header-btn">
                    {% if section.settings.register_btn_info != '' %}  
                        <p>{{ section.settings.register_btn_info }}</p>
                    {% endif %}  
                {% if section.settings.register_btn_txt != '' %}  
                    <a href="/account/register" class="axil-btn btn-bg-secondary sign-up-btn">{{ section.settings.register_btn_txt }}</a>
                {% endif %}  
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-4 col-lg-6">
            <div class="axil-signin-banner bg_image bg_image--10">
                {% if section.settings.register_btn_info != '' %}  
                <h3 class="title">{{ section.settings.register_btn_info }}</p>
            {% endif %} 
            </div>
        </div>
        <div class="col-lg-6 offset-xl-2">
            <div class="axil-signin-form-wrap">
                <div class="axil-signin-form">
                    <h3 class="acount-title">Sign in to eTrade.</h3>
                    <p class="b2">Enter your detail below</p>

                    <div class="singin-form">
                        {% form 'customer_login' %}
                            {% if form.errors %}
                                <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                                    <strong class="font-bold">Error!</strong>
                                    <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                                </div>
                            {% endif %}
            
                            <div class="form-group">
                                <label for="email_address" class="form-label">Email address</label>
                                <input type="email"
                                    name="customer[email]"
                                    id="email_address"
                                    autocomplete="email"
                                    class="form-control"
                                    placeholder="Email address"
                                >
                            </div>
            
                            {% if form.password_needed %}
                                <div class="form-group">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password"
                                        name="customer[password]"
                                        id="password"
                                        autocomplete="current-password"
                                        class="form-control"
                                        placeholder="Password"
                                    >
                                </div>
                            {% endif %}
            
                            <div class="form-group d-flex align-items-center justify-content-between">
                                <button type="submit" class="axil-btn btn-bg-primary submit-btn">
                                    Sign in
                                </button>
                                <a href="#" class="forgot-btn">
                                    Forgot your password?
                                </a>
                            </div>
                             
                        {% endform %}
                    </div>
            
                    {% if shop.checkout.guest_login %}
                        <hr class="my-12">
            
                        <div>
                            <h3 class="account-title">Continue as a guest</h3>
                        </div> 
                        {% form 'guest_login' %}
                            <div>
                                <button type="submit" class="axil-btn btn-bg-secondary">
                                    Continue
                                </button>
                            </div>
                        {% endform %}
                    {% endif %}
                    <div  class="ryp">
                        <div>
                            <h3 class="acount-title">Recover your password</h3>
                        </div>
                        <div class="mt-8">
                            {% form 'recover_customer_password' %}
                                {% if form.errors %}
                                    <div class="relative border border-red-400 bg-red-100 text-red 700 px-4 py-3" role="alert">
                                        <strong class="font-bold">Error!</strong>
                                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                                    </div>
                                {% endif %}
                
                                <div class="form-group">
                                    <label for="email" class="form-label">Email address</label>
                                    <input type="email"
                                        name="email"
                                        id="email"
                                        autocomplete="email"
                                        class="form-control"
                                        placeholder="Email address"
                                    >
                                </div>
                 
                                <div class="form-group d-flex align-items-center justify-content-between">
                                    <button type="submit" class="axil-btn btn-bg-secondary submit-btn"">
                                        Recover password
                                    </button>
                                    <a href="#" class="forgot-btn"> <i class="fal fa-sign-out"></i> Back to login</a> 
                                </div>
 
                            {% endform %}
                        </div>
                    </div>
                </div>
               
            </div>
            
        </div>
    </div>
</div>

{%- style -%}
  .bg_image--10{ 
    background: {{ section.settings.bg_color }} 
     url("{{ section.settings.register_image | img_url: 'master' }}") no-repeat scroll center center / cover;  
  } 

#section-footer, header.header { display: none }

{%- endstyle -%}

{% schema %}
{
    "name": "login",
    "settings": [
        {
            "type": "text",
            "id": "register_btn_info",
            "default": "Not a member?",
            "label": "SignIn Button Info"
          }, 
          {
            "type": "text",
            "id": "register_btn_txt",
            "default": "Sign Up Now",
            "label": "SignIn Button Text"
          },
          {
            "type": "text",
            "id": "register_side_title",
            "default": "Why People Choose Us",
            "label": "Banner Title"
          },
        {
            "type": "image_picker",
            "id": "register_image",
            "label": "Register Image"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#ffffff"
          }
    ]
}

{% endschema %}