                                                              <button class="pickup-availability-button link link--text position-relative">{{ 'products.product.pickup_availability.refresh' | t }}</button>
                                                          </div>
                                                      </pickup-availability-preview>
                                                  </template>
                                              </pickup-availability>
                                              <script src="{{ 'pickup-availability.js' | asset_url }}" defer="defer"></script>
                      </div>
                         
                      <div class="product-action-wrapper"> 
                      {% when 'meta' %}
