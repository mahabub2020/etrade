
{%- capture data_slick_activation -%}
      data-slick='{
          {%- if section.settings.autoplay_true -%}
          "autoplay": true,
          "autoplaySpeed": {{ section.settings.autoplay_speed }},
          {%- endif -%} 
          "slidesToScroll": 1,
          "slidesToShow": {{ section.settings.product_column }}, 
          "arrows": true,
          "dots": false,   
          "nextArrow": "<button class=\"slide-arrow prev-arrow\"><i class=\"fal fa-long-arrow-left\"></i></button>", 
          "prevArrow": "<button class=\"slide-arrow next-arrow\"><i class=\"fal fa-long-arrow-right\"></i></button>",

            "responsive":[
                {"breakpoint":992, "settings": {"slidesToShow": {{ section.settings.product_column_lg }}} },
                {"breakpoint":768, "settings": {"slidesToShow": {{ section.settings.product_column_md }}} },
                {"breakpoint":480, "settings": {"slidesToShow": {{ section.settings.product_column_sm }}} }
              ]  
      }'
   {%- endcapture -%}

{% if section.settings.collection_style == 'cat_style_1' %}
  <!-- Start Categorie Area  -->
  <div class="axil-categorie-area bg-color-white axil-section-gapcommon">
    <div class="container">
      <div class="section-title-wrapper">
        {% if section.settings.sub_title != '' %}
          <span class="title-highlighter highlighter-secondary">
            {{ section.settings.sub_title_icon }} {{ section.settings.sub_title }}</span>
        {% endif %}
        {% if section.settings.section_title != '' %}
          <h2 class="title">{{ section.settings.section_title }}</h2>
        {% endif %}
      </div>
      <div class="slick-slider slick-layout-wrapper--15 axil-slick-arrow  arrow-top-slide"   {% if settings.rtl_enable %} dir="rtl"{% endif %} {{ data_slick_activation }}>
        {% for collection in section.settings.featured_cat_collection %}
          {% if collection.all_products_count > 0 %}
            <div class="slick-single-layout">
              <div class="categrie-product">
                <a href="{{ collection.url | escape }}">
                  {%- if collection.image -%}
                    {%- assign collection_image = collection.image -%}
                  {%- elsif collection.products.first and collection.products.first.images != empty -%}
                    {%- assign collection_image = collection.products.first.featured_image -%}
                  {%- else -%}
                    {%- assign collection_image = blank -%}
                  {%- endif -%}
                  <img src="{{ collection_image | img_url: '64x64' }}" alt="{{ collection.title | escape }}">
                  <h5 class="cat-title">{{ collection.title | escape }}</h5>
                </a>
              </div>
              <!-- End .categrie-product -->
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
{% elsif section.settings.collection_style == 'cat_style_2' %}
  <!-- Start Categorie Area  -->
  <div class="axil-categorie-area bg-color-white axil-section-gap pb--0">
    <div class="container">
      <div class="product-area pb--50">
        <div class="section-title-wrapper">
          {% if section.settings.sub_title != '' %}
            <span class="title-highlighter highlighter-secondary">
              {{ section.settings.sub_title_icon }} {{ section.settings.sub_title }}</span>
          {% endif %}
          {% if section.settings.section_title != '' %}
            <h2 class="title">{{ section.settings.section_title }}</h2>
          {% endif %}
        </div>
        <div class="categrie-product-activation-3 slick-slider slick-layout-wrapper--15 axil-slick-arrow  arrow-top-slide"   {% if settings.rtl_enable %} dir="rtl"{% endif %} {{ data_slick_activation }}>
          {% for collection in section.settings.featured_cat_collection %}
            {% if collection.all_products_count > 0 %}
              <div class="slick-single-layout slick-slide">
                <div class="categrie-product categrie-product-3">
                  <a href="{{ collection.url | escape }}">
                    {%- if collection.image -%}
                      {%- assign collection_image = collection.image -%}
                    {%- elsif collection.products.first and collection.products.first.images != empty -%}
                      {%- assign collection_image = collection.products.first.featured_image -%}
                    {%- else -%}
                      {%- assign collection_image = blank -%}
                    {%- endif -%}
                    <img src="{{ collection_image | img_url: '164x108' }}" alt="{{ collection.title | escape }}">
                    <h5 class="cat-title">{{ collection.title | escape }}</h5>
                  </a>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <!-- End Categorie Area  -->
{% else %}
  <!-- Start Categorie Area  -->
  <div class="axil-categorie-area pt--30 bg-color-white">
    <div class="container">
      <div class="categrie-product-activation-2 slick-slider categorie-product-two slick-layout-wrapper--15"   {% if settings.rtl_enable %} dir="rtl"{% endif %} {{ data_slick_activation }}>
        {% for collection in section.settings.featured_cat_collection %}
          {% if collection.all_products_count > 0 %} 
            <div class="slick-single-layout slick-slide">
              <div class="categrie-product-2">
                <a href="{{ collection.url | escape }}">
                  {%- if collection.image -%}
                    {%- assign collection_image = collection.image -%}
                  {%- elsif collection.products.first and collection.products.first.images != empty -%}
                    {%- assign collection_image = collection.products.first.featured_image -%}
                  {%- else -%}
                    {%- assign collection_image = blank -%}
                  {%- endif -%}
                  <img src="{{ collection_image | img_url: '24x24' }}" alt="{{ collection.title | escape }}">
                  <h5 class="cat-title">{{ collection.title | escape }}</h5>
                </a>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
  <!-- End Categorie Area  -->

{% endif %}

{% schema %}
  {
    "name": "Collection Carousel",
    "settings": [
      {
        "type": "header",
        "content": "Collection Style"
      },
      {
        "type": "radio",
        "id": "collection_style",
        "label": "Collection Layout",
        "options": [
          {
            "value": "cat_style_1",
            "label": "Style 1"
          }, {
            "value": "cat_style_2",
            "label": "Style 2"
          }, {
            "value": "cat_style_3",
            "label": "Style 3"
          }
        ],

        "default": "cat_style_1"
      },
      {
        "type": "html",
        "id": "sub_title_icon",
        "default": "<i class='fas fa-tags'></i>",
        "label": "Before Icon"
      },
      {
        "type": "text",
        "id": "sub_title",
        "default": "Before Title",
        "label": "Before Title"
      }, {
        "type": "text",
        "id": "section_title",
        "default": "Featured Categories",
        "label": "Title"
      }, 
      {
        "type": "collection_list",
        "id": "featured_cat_collection",
        "label": "Collection"
      },
      {
        "type": "header",
        "content": "Options"
      },
      {
        "type": "checkbox",
        "id": "autoplay_true",
        "label": "Autoplay Enable",
        "default": false
      },
      {
        "type": "range",
        "id": "autoplay_speed",
        "min": 1000,
        "max": 9000,
        "step": 1000,
        "label": "Autoplay Speed",
        "unit": "ms",
        "default": 5000
      },
      {
        "type": "header",
        "content": "Product Carousel Column"
      },
      {
        "type": "range",
        "id": "product_column",
        "min": 1,
        "max": 12,
        "step": 1,
        "label": "Desktop",
        "default": 6
      },
      {
        "type": "range",
        "id": "product_column_lg",
        "min": 1,
        "max": 12,
        "step": 1,
        "label": "Laptop",
        "default": 5
      },
      {
        "type": "range",
        "id": "product_column_md",
        "min": 1,
        "max": 12,
        "step": 1,
        "label": "Tablet",
        "default": 4
      },
      {
        "type": "range",
        "id": "product_column_sm",
        "min": 1,
        "max": 12,
        "step": 1,
        "label": "Mobile",
        "default": 2
      }
    ],

    "presets": [
      {
        "name": "Collection Carousel"
      }
    ]
  }
{% endschema %}