{%- capture data_slick_activation -%}
data-slick='{
    {%- if section.settings.autoplay_true -%}
    "autoplay": true,
    "autoplaySpeed": {{ section.settings.autoplay_speed }},
    {%- endif -%} 
    infinite: true,
    "centerPadding": 0,
    "slidesToScroll": 1,
    "slidesToShow": 3, 
    "arrows": false, 
    "speed": 1500,
    centerMode: true,
    {% if settings.rtl_enable %} "rtl": true,{% endif %} 
    "dots": false,   
      "responsive":[
          {"breakpoint":575, "settings": {"slidesToShow": 1, slidesToScroll: 1 } }
        ]  
}'
{%- endcapture -%}
<div id="section-{{ section.id }}" class="axil-main-slider-area main-slider-style-3">
  <div class="container">
      <div class="row align-items-center">

          <div class="col-xl-6 col-lg-6">
              <div class="main-slider-content">
                {% if section.settings.subtitle != '' %}
                  <span class="subtitle"><i class="fas fa-fire"></i>{{ section.settings.subtitle }}</span>
                {% endif %} 
                {% if section.settings.banner_title != '' %}
                  <h1 class="title">{{ section.settings.banner_title }}</h1>
                {% endif %}  
                {% if section.settings.banner_btn_url %}  
                  <div class="shop-btn">
                    <a href="{{ section.settings.banner_btn_url }}" class="axil-btn btn-bg-white right-icon"> {{ section.settings.banner_btn_txt }} <i class="fal fa-long-arrow-right"></i></a>
                  </div>   
                {% endif %}   
              </div>
          </div>

          <div class="col-xl-6 col-lg-6">
              <div class="main-slider-large-thumb"> 
                  <div class="axil-slick-slider slider-thumb-activation-two axil-slick-dots"  {% if settings.rtl_enable %} dir="rtl"{% endif %} {{ data_slick_activation }}>
                    {% if section.settings.reverse_order == true %}
                      {% assign collection = section.settings.product_collection.products | sort: section.settings.sort_by | reverse %}
                    {% else %}
                      {% assign collection = section.settings.product_collection.products | sort: section.settings.sort_by %}
                    {% endif %}
                    {% for product in collection limit: section.settings.number_of_products_to_show offset: section.settings.offset_product %}
                      {% assign ex = 0 %}
                        {% for ex_product in section.settings.excluded_products %}
                          {% if product.id == ex_product.id %}
                            {% assign ex = 1 %}
                          {% endif %}
                      {% endfor %}
                    {% if ex == 0 %}
                      <div class="single-slide slick-slide">
                        {% assign layout = 'product-layout-' | append: section.settings.product_layout %}
                          {% capture include_snippet %}
                            {% include layout %}
                          {% endcapture %}
                        {{ include_snippet }}
                      </div>
                    {% endif %}
                  {% endfor %}  
          </div>
      </div>
  </div>
</div>
</div>
</div>


<style>
 
#section-{{ section.id }}.main-slider-style-3  {
  background-image: url( {{ section.settings.section_bg_color }} 
      {{ section.settings.banner_img | img_url: '2000x1333' }}
    );  
}

</style>

{% schema %}
{
  "name": "NFT Banner",
  "settings": [
    {
      "type": "header",
      "content": "Banner Content"
    },   
    {
      "type": "text",
      "id": "subtitle",
      "label": {
        "en": "Slider Sub Title"
      },
      "default": {
        "en": " Largest NFT marketplace"
      }
    },
    {
      "type": "text",
      "id": "banner_title",
      "label": {
        "en": "Title"
      },
      "default": {
        "en": "Discover, collect, and sell extraordinary NFTs"
      }
    }, 
    {
      "type": "text",
      "id": "banner_btn_txt",
      "label": "Button Text",
      "default": "Explore"
      
    },
    {
      "type": "url",
      "id": "banner_btn_url",
      "label": "URL"
    },
    {
      "type": "image_picker",
      "id": "banner_img",
      "label": "Banner Background Image"
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },


    {
      "type": "header",
      "content": "Product Filter"
    },  
    {
      "type": "collection",
      "id": "product_collection",
      "label": "Collection"
    }, 

    {
      "type": "range",
      "id": "number_of_products_to_show",
      "min": 4,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Number of products to show"
    }, 
    {
      "type": "select",
      "id": "product_layout",
      "label": "Product Collection Layout",
      "info": "Layout 5",
      "default": "5",
      "options": [
        {
          "label": "Layout 1",
          "value": "1"
        },
        {
          "label": "Layout 2",
          "value": "2"
        },
        {
          "label": "Layout 3",
          "value": "3"
        },
        {
          "label": "Layout 4",
          "value": "4"
        }, {
          "label": "Layout 5",
          "value": "5"
        }, {
          "label": "Layout 6",
          "value": "6"
        }, {
          "label": "Layout 7",
          "value": "7"
        }, {
          "label": "Layout 8",
          "value": "8"
        }
      ]
    }, {
      "type": "product_list",
      "id": "excluded_products",
      "label": "Product To Exclude"
    }, {
      "type": "number",
      "id": "offset_product",
      "label": "Offset"
    }, {
      "type": "select",
      "id": "sort_by",
      "label": "Sort By",
      "options": [
        {
          "label": "Name",
          "value": "title"
        }, {
          "label": "Price",
          "value": "price"
        }, {
          "label": "Date",
          "value": "published_at"
        }
      ],
      "default": "title"
    }, {
      "type": "checkbox",
      "id": "reverse_order",
      "label": "Reverse (Descending) Order"
    }, {
      "type": "checkbox",
      "id": "hover_img",
      "label": "Show Hover Image"
    },
    {
      "type": "header",
      "content": "Options"
    },
    {
      "type": "checkbox",
      "id": "autoplay_true",
      "label": "Autoplay Enable",
      "default": false
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 1000,
      "max": 9000,
      "step": 1000,
      "label": "Autoplay Speed",
      "unit": "ms",
      "default": 5000
    }
  ],

  "presets": [
    {
      "name": "NFT Banner"
    }
  ]
}
{% endschema %}
 
