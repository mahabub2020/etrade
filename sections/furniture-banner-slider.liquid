
  {%- capture data_slick_activation_content -%}
    data-slick='{   
    {%- if section.settings.autoplay_true -%}
    "autoplay": true,
    "autoplaySpeed": {{ section.settings.autoplay_speed }},
    {%- endif -%}   
    "slidesToScroll": 1,
    "slidesToShow": 1, 
    "arrows": false,
    "dots": true, 
    "speed": 400,
    "fade": true,
    "infinite": true,   
    }'
  {%- endcapture -%}
  <!-- Start Slider Area -->
  <div id="section-{{ section.id }}" class="axil-main-slider-area main-slider-style-5">
    <div class="container">
        <div class="slider-box-wrap">
            <div class="axil-slick-slider slider-activation-two axil-slick-dots"   {% if settings.rtl_enable %} dir="rtl"{% endif %} {{ data_slick_activation_content }}>
              {% for block in section.blocks %}  
              {% case block.type %}
                {% when 'banner' %} 
               
                <div class="single-slide slick-slide">
                    <div class="main-slider-content">
                        {% if block.settings.subtitle != '' %}
                          <span class="subtitle"><i class="fas fa-fire"></i>{{ block.settings.subtitle }}</span>
                        {% endif %} 
                        {% if block.settings.banner_title != '' %}
                          <h1 class="title">{{ block.settings.banner_title }}</h1>
                        {% endif %}  
                        {% if block.settings.banner_btn_url %}  
                          <div class="shop-btn">
                            <a href="{{ block.settings.banner_btn_url }}" class="axil-btn btn-bg-primary"><i class="far fa-shopping-cart"></i> {{ block.settings.banner_btn_txt }}</a>
                          </div>   
                        {% endif %}   
                    </div>
                    {% if block.settings.banner_img != '' %}
                    <div class="main-slider-thumb">
                      <img src="{% if block.settings.banner_img %}{{ block.settings.banner_img | img_url: '530x460' }}{% else %}http:\/\/via.placeholder.com\/530x460{% endif %}" alt="{{ block.settings.banner_img.alt }}"> 
                    </div>
                  {% endif %}  

                </div>
              {% endcase %} 
            {% endfor %}
            </div>
        </div>
    </div>
</div>
 
{% schema %}
{
    "name": "Furniture Banner",
    "settings": [
        {
          "type": "header",
          "content": "Banner Options"
        },
        {
          "type": "checkbox",
          "id": "autoplay_true",
          "label": "Autoplay Enable",
          "default": false
        },
        {
          "type": "range",
          "id": "autoplay_speed",
          "min": 1000,
          "max": 9000,
          "step": 1000,
          "label": "Autoplay Speed",
          "unit": "ms",
          "default": 5000
        }
    ], 
    "blocks": [
      {
        "type": "banner",
        "name": {
          "en": "Banner Block"
        },
        "settings": [
          {
            "type": "text",
            "id": "subtitle",
            "label": {
              "en": "Slider Sub Title"
            },
            "default": {
              "en": " Hot Deal In This Week"
            }
          },
          {
            "type": "text",
            "id": "banner_title",
            "label": {
              "en": "Title"
            },
            "default": {
              "en": "Smart Digital Watch"
            }
          },
          {
            "type": "text",
            "id": "banner_btn_txt",
            "label": "Button Text",
            "default": "Shop Now"
            
          },
          {
            "type": "url",
            "id": "banner_btn_url",
            "label": "URL"
          },
          {
            "type": "image_picker",
            "id": "banner_img",
            "label": "Banner Image"
          } 
        ]
      }
    ],
    "presets": [
      {
        "category": "banner",
        "name": "Furniture Banner"
    }]
}
{% endschema %}
 
