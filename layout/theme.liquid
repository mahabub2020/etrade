
{% liquid
  assign enable_rtl = settings.enable_rtl
  assign language_support_rtl = settings.language_support_rtl
  if enable_rtl and language_support_rtl != blank
    assign shop_locale = localization.language.iso_code
    assign language_support_rtl_list = language_support_rtl | split: ','
    assign is_rtl = language_support_rtl_list | where: shop_locale
    if is_rtl.size > 0
      assign enable_rtl = true
    else
      assign enable_rtl = false
    endif
  endif
%}

<!doctype html>
  <html
    class="no-js supports-no-cookies p-0"
    lang="{{ request.locale.iso_code }}"
    data-template="{{ template.name }}"
    {% if enable_rtl %}dir="rtl"{% endif %}>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_primary }}"> 
    {%- liquid
      render 'SEO' 
    -%}
 
    <!-- Title and description -->
    {% capture seo_title %}
      {{ page_title }}
      {% if current_tags %}
        {%- assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags -}}
      {% endif %}
      {% if current_page != 1 %}
        &ndash; {{ 'general.meta.page' | t: page: current_page }}
      {% endif %}
      {% unless page_title contains shop.name %}
        &ndash; {{ shop.name }}
      {% endunless %}
    {% endcapture %}
    <title>{{ seo_title }}</title>

    {%- if page_description -%}
      <meta name="description" content="{{ page_description | escape }}">
    {%- endif -%}
    {{ content_for_header }}
    <!-- Header hook for plugins -->

    <!-- Header hook for plugins -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'theme-default-vendor.css' | asset_url | stylesheet_tag }}
    {{ 'style.css' | asset_url | stylesheet_tag }}

    {{ 'jquery.js' | asset_url | script_tag }}
    {{ 'application.js' | asset_url | script_tag }}
    {{ 'vendor.min.js' | asset_url | script_tag }}
    {{ 'slick.min.js' | asset_url | script_tag }}
    {{ 'main.js' | asset_url | script_tag }}<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.2/dist/alpine.min.js" defer> </script>

    {{ 'component-show-more.css' | asset_url | stylesheet_tag }}  
    
    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
    
    <style>
      [x-cloak] {
        display: none !important;
      }
    </style>
    {{ shop.metafields.reviewxpo['global_styles'] }}
    {% render "reviews-importer-variable-js" %}
    {% if template contains 'collection' %}
      {{ 'https://cdn.shopify.com/s/files/1/0382/4185/files/ajaxinate.js?937' | script_tag }}{% endif %}
  </head>
  <body
    id="bt-theme"
    class="{{ body_classes }} position-relative min-h-screen {% if customer %} customer-logged-in {% endif %}"
    {% if template.name == 'product' %}data-product-id="{{ product.id }}"{% endif %}>

    {% section 'header' %}

    <main class="main-content" role="main">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}
    <!-- Necessary JS -->

    <script>
      var rvxpo_product_ratings = {{ product.metafields.reviewxpo.rating.value | json }};
    </script>

    {{ shop.metafields.reviewxpo['global_scripts'] }}

    {% render "reviews-importer-popup" %}
    {% render 'scroll-to-top-button' %}
  </body>
</html>
